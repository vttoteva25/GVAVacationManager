
@model dynamic;
@using GVAVacationManager.HelpingTools;

<body class="custom">
    <div class="row py-5 px-4">
        <div class="col-md-10 mx-auto">
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3"><img src="/images/profilePicture.svg" alt="..." width="130" class="rounded-circle mb-2 img-thumbnail"></div>
                        <div class="media-body mb-5 normal-text">
                            <h3 class="mt-0 mb-1"><span style="background-color: white; padding: 5px;">@Logged.User.FirstName @Logged.User.LastName</span></h3>
                        </div>
                    </div>
                </div>
                <div class="px-4 py-5" style="margin-top: 20px;">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="col-6">
                            <h5 class="mb-0" style="text-indent: 10px;">Проекти</h5>
                        </div>
                        <div class="col-6 text-right">
                            <a asp-controller="User" asp-action="Register" class="btn btn-primary">Създай акаунт</a>
                        </div>

                    </div>
                 
                        @foreach (User user in Model.Users)
                        {
                            <div class="p-4 my-2 rounded shadow-sm bg-light">
                                <a class="  mb-0 recent-link custom-text" asp-controller="User" asp-action="Profile" asp-route-id="@user.Username">@user.FirstName @user.LastName</a>
                                
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
</body>