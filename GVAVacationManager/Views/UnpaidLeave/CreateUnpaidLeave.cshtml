@model GVAVacationManager.ViewModels.LeaveVM.UnpaidLeaveViewModel
@using GVAVacationManager.HelpingTools

<body class="dark-body">
    <div class="container">
        <div class="row justify-content-center lower">
            <div class="col-md-6 register-form-bg rounded">
                <form asp-action="Create" asp-controller="PaidLeave" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <h2 class="normal-heading">Създай заявка за неплатен отпуск</h2>
                        <br />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Начална дата</label>
                        <label asp-for="From" class="control-label"></label>
                        <input asp-for="From" class="form-control datepicker" value="@DateTime.Today.ToShortDateString()"/>
                        <span asp-validation-for="From" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="To" class="control-label">Крайна дата</label>
                            <input asp-for="To" class="form-control datepicker" value="@DateTime.Today.ToShortDateString()" />
                            <span asp-validation-for="To" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="HalfDayLeave" class="control-label">Половин ден</label>
                            <input type="checkbox" name="halfDay" value="true">
                            <span asp-validation-for="HalfDayLeave" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group align-items-center text-center">
                        <input type="submit" asp-route-id="@Logged.User.Username" id="create" value="Създай" class="btn btn-lg dark-button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
