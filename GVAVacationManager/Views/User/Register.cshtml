@model GVAVacationManager.ViewModels.UserVM.RegisterUserViewModel
@{ ViewData["Title"] = "Register | GVA "; }

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login-signup.css" rel="stylesheet" type="text/css" />
</head>

<body class="dark-body">
    <div class="container">
        <div class="row justify-content-center lower">
            <div class="col-md-6 register-form-bg rounded">
                <form asp-action="Register" asp-controller="User" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <h2 class="normal-heading">Създай акаунт</h2>
                        <br />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">* Потребителско име</label>
                        <input asp-for="Username" class="form-control normal-text" placeholder="Въведете потребителско име..." />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">* Име</label>
                        <input asp-for="FirstName" class="form-control normal-text" placeholder="Въведете името..." />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">* Фамилия</label>
                        <input asp-for="LastName" class="form-control normal-text" placeholder="Въведете фамилията..." />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">* Парола</label>
                        <input type="password" asp-for="Password" class="form-control normal-text" placeholder="Въведете паролата..." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">* Повтори парола</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control normal-text" placeholder="Повторете паролата..." />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Роля във фирмата</label>
                        <select asp-for="RoleId" class="browser-default custom-select">
                            <option selected=""></option>
                            @foreach (Role role in Model.Roles)
                            {
                                <option value="@role.Id">@role.RoleName</option>
                            }
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Екип</label>
                        <select asp-for="TeamId" class="browser-default custom-select">
                            <option selected=""></option>
                            @foreach (Team team in Model.Teams)
                            {
                                <option value="@team.Id">@team.TeamName</option>
                            }
                        </select>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>
                    <div class="form-group align-items-center text-center">
                        <input type="submit" id="register" value="Регистрация" class="btn btn-lg dark-button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>